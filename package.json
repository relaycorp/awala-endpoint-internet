{
  "name": "awala-endpoint",
  "version": "1.0.0",
  "type": "module",
  "files": ["build"],
  "bin": {
    "pohttp-server": "./build/bin/server.js",
    "pohttp-client": "./build/bin/client.js",
    "pohttp-bootstrap": "./build/bin/bootstrap.js"
  },
  "scripts": {
    "prebuild": "run-s clean",
    "build": "tsc -p tsconfig.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint -c .eslintrc.cjs --fix src",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "eslint -c .eslintrc.cjs src",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:functional": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config src/functionalTests/jest.config.cjs --runInBand --detectOpenHandles",
    "clean": "del-cli build test coverage"
  },
  "dependencies": {
    "@fastify/routes": "^5.1.0",
    "@fastify/type-provider-json-schema-to-ts": "^2.2.2",
    "@relaycorp/awala-keystore-cloud": "^2.1.3",
    "@relaycorp/pino-cloud": "^1.0.28",
    "@relaycorp/relaynet-core": "^1.84.2",
    "@relaycorp/relaynet-testing": "^2.2.28",
    "@relaycorp/webcrypto-kms": "^1.5.7",
    "@typegoose/typegoose": "^11.1.0",
    "cloudevents": "^6.0.4",
    "date-fns": "^2.30.0",
    "env-var": "^7.3.0",
    "fastify": "^4.14.0",
    "fastify-plugin": "^4.5.0",
    "mongoose": "^7.1.2",
    "pino": "^8.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@peculiar/webcrypto": "^1.4.3",
    "@relaycorp/eslint-config": "^1.1.103",
    "@relaycorp/shared-config": "^1.9.1",
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/split2": "^4.2.0",
    "del-cli": "^5.0.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "split2": "^4.1.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "engines": {
    "node": "18"
  }
}
